{
  "mcpServers": {
    "gemini": {
      "command": "gemini-mcp",
      "args": [],
      "env": { "GEMINI_API_KEY": "AIzaSyBbANWPv3uaxDiEUHnxZv_sRd9QM7vjXaw" }
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -Command \"$ts = Get-Date -Format 'yyyy-MM-ddTHH:mm:ss'; Add-Content -Path 'logs/agent-actions.log' -Value \\\"[$ts] Bash: $env:CLAUDE_TOOL_INPUT\\\" -ErrorAction SilentlyContinue\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -Command \"$ts = Get-Date -Format 'yyyy-MM-ddTHH:mm:ss'; $session = $env:CLAUDE_SESSION; Add-Content -Path 'logs/sessions.log' -Value \\\"[$ts] Session Started: $session\\\" -ErrorAction SilentlyContinue\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"C:\\Users\\Berend Mainz\\claude-notify.ps1\" -Type input"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"C:\\Users\\Berend Mainz\\claude-notify.ps1\" -Type done"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__claude-in-chrome__tabs_create|mcp__claude-in-chrome__navigate",
        "hooks": [
          {
            "type": "command",
            "command": "echo [Chrome MCP] Tab operation detected - remember to register tab"
          }
        ]
      }
    ]
  },
