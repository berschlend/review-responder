{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "git fetch --all --quiet 2>/dev/null || true"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix --silent 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npm install *)",
      "Bash(npm uninstall *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git checkout *)",
      "Bash(git branch *)",
      "Bash(git fetch *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(cd *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *.ts)",
      "Bash(rm *.tsx)",
      "Bash(rm *.js)",
      "Bash(rm *.jsx)",
      "Bash(rm *.json)",
      "Bash(rm *.md)",
      "Bash(rm *.css)",
      "Bash(rm -rf node_modules)",
      "Bash(rm -rf .next)",
      "Bash(rm -rf dist)",
      "Bash(rm -rf build)",
      "Bash(rm -rf coverage)",
      "Bash(echo *)",
      "Bash(which *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(curl * | sh)",
      "Bash(wget * | sh)",
      "Bash(eval *)"
    ]
  },
  "model": "claude-opus-4-5",
  "thinking": true
}
