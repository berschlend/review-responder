{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:fix --silent 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "npm run *",
      "npm install *",
      "npm uninstall *",
      "npx *",
      "node *",
      "git status",
      "git diff *",
      "git add *",
      "git commit *",
      "git push *",
      "git pull *",
      "git checkout *",
      "git branch *",
      "git fetch *",
      "git log *",
      "git show *",
      "git stash *",
      "gh pr *",
      "gh issue *",
      "cat *",
      "ls *",
      "pwd",
      "cd *",
      "mkdir *",
      "touch *",
      "cp *",
      "mv *",
      "rm *.ts",
      "rm *.tsx",
      "rm *.js",
      "rm *.jsx",
      "rm *.json",
      "rm *.md",
      "rm *.css",
      "rm -rf node_modules",
      "rm -rf .next",
      "rm -rf dist",
      "rm -rf build",
      "rm -rf coverage",
      "echo *",
      "which *",
      "head *",
      "tail *",
      "grep *",
      "find *",
      "wc *"
    ],
    "deny": [
      "rm -rf /",
      "rm -rf ~",
      "rm -rf /*",
      "sudo *",
      "chmod 777 *",
      "curl * | sh",
      "wget * | sh",
      "eval *"
    ]
  },
  "model": "claude-opus-4-5",
  "thinking": true
}
